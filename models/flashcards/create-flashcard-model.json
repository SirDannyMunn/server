{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Create flashcard schema",
  "type": "object",
  "properties": {
    "question": {
      "type": "string",
      "minLength": 1,
      "maxLength": 999
    },
    "answer":  {
      "type": "string",
      "minLength": 1,
      "maxLength": 999
    },
    "activationDate":  {
      "type": "string",
      "minLength": 1,
      "maxLength": 999
    }
  },
  "required": [
    "question",
    "answer"
  ],
  "additionalProperties": false
}
